             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MobileApp.MainPage">

    <StackLayout>
        <Button Text="Binding List String" x:Name="btnBindingListString" Clicked="BtnBindingListString_Clicked" />
        <Button Text="Binding to a Data Model" x:Name="btnBindingDataModel" Clicked="BtnBindingDataModel_Clicked" />
        <Button Text="List View Image" x:Name="btnListViewImage" Clicked="BtnListViewImage_Clicked" />
        <Button Text="Customizing List Rows" x:Name="btnCustomizingListRows" Clicked="BtnCustomizingListRows_Clicked" />
